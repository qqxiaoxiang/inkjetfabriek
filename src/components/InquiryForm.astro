<div class="inquiry-form-overlay" id="inquiryForm">
  <div class="inquiry-form-container">
    <div class="inquiry-form-header">
      <h2>Offerteaanvraag</h2>
      <button class="inquiry-form-close" onclick="closeInquiryForm()">&times;</button>
    </div>
    <form id="inquiryFormElement" class="inquiry-form">
      <div class="form-row">
        <div class="form-group">
          <label for="name">Naam *</label>
          <input type="text" id="name" name="name" required placeholder="Uw naam">
        </div>
        <div class="form-group">
          <label for="country">Land *</label>
          <input type="text" id="country" name="country" required placeholder="Uw land">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label for="phone">Telefoon / WhatsApp *</label>
          <input type="tel" id="phone" name="phone" required placeholder="Uw telefoonnummer">
        </div>
        <div class="form-group">
          <label for="email">E-mail *</label>
          <input type="email" id="email" name="email" required placeholder="Uw e-mailadres">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group full-width">
          <label for="message">Bericht *</label>
          <textarea id="message" name="message" rows="5" required placeholder="Uw bericht"></textarea>
        </div>
      </div>
      <input type="hidden" id="pageUrl" name="pageUrl" value="">
      <div class="form-actions">
        <button type="submit" class="btn primary large">Verzend Offerteaanvraag</button>
        <button type="button" class="btn secondary large" onclick="closeInquiryForm()">Annuleren</button>
      </div>
    </form>
    <div class="form-status" id="formStatus"></div>
  </div>
</div>

<script is:inline>
  // 打开询盘表单
  function openInquiryForm() {
    const formOverlay = document.getElementById('inquiryForm');
    if (formOverlay) {
      formOverlay.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }
  }

  // 关闭询盘表单
  function closeInquiryForm() {
    const formOverlay = document.getElementById('inquiryForm');
    const formElement = document.getElementById('inquiryFormElement');
    const formStatus = document.getElementById('formStatus');
    
    if (formOverlay) {
      formOverlay.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
    
    // 重置表单
    if (formElement) {
      formElement.reset();
    }
    if (formStatus) {
      formStatus.innerHTML = '';
    }
  }

  // 将函数绑定到window对象
  window.openInquiryForm = openInquiryForm;
  window.closeInquiryForm = closeInquiryForm;

  // 页面加载完成后执行
  document.addEventListener('DOMContentLoaded', () => {
    // 设置页面URL
    const pageUrlInput = document.getElementById('pageUrl');
    if (pageUrlInput) {
      pageUrlInput.value = window.location.href;
    }

    // 表单提交处理
    const inquiryForm = document.getElementById('inquiryFormElement');
    if (inquiryForm) {
      inquiryForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const form = e.target;
        const status = document.getElementById('formStatus');
        const submitBtn = form.querySelector('button[type="submit"]');
        
        // 显示加载状态
        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.textContent = 'Verzenden...';
        }
        if (status) {
          status.innerHTML = '<p class="loading">Bezig met verzenden...</p>';
        }
        
        try {
          // 获取表单数据
          const formData = new FormData(form);
          const data = Object.fromEntries(formData);
          
          // 提交到Cloudflare Workers接口
          const response = await fetch('https://form1.ailujiaxiang.workers.dev/', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          });
          
          const result = await response.json();
          
          if (response.ok && status) {
            status.innerHTML = '<p class="success">Bedankt! Uw aanvraag is succesvol verzonden. We nemen spoedig contact met u op.</p>';
            // 清空表单
            form.reset();
            // 3秒后自动关闭
            setTimeout(() => {
              window.closeInquiryForm();
            }, 3000);
          } else if (status) {
            throw new Error(result.error || 'Er is een fout opgetreden bij het verzenden.');
          }
        } catch (error) {
          if (status) {
            status.innerHTML = `<p class="error">Fout: ${error.message} Probeer het opnieuw.</p>`;
          }
        } finally {
          // 恢复按钮状态
          if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Verzend Offerteaanvraag';
          }
        }
      });
    }
    
    // 点击遮罩层关闭表单
    const formOverlay = document.getElementById('inquiryForm');
    if (formOverlay) {
      formOverlay.addEventListener('click', (e) => {
        if (e.target.id === 'inquiryForm') {
          window.closeInquiryForm();
        }
      });
    }
  });
</script>

