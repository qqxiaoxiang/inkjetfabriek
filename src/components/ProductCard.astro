---
const { product } = Astro.props;
---

<article class="product-card">
  <div class="product-image-container">
    <img src={product.image} alt={product.title} loading="lazy" />
    <div class="product-card-overlay">
      <a class="view-product-btn" href={`/products/${product.category}/${product.slug}`}>Bekijk product</a>
    </div>
  </div>
  <div class="content">
    <div class="product-category-badge">{product.category.toUpperCase()}</div>
    <h3>{product.title}</h3>
    <p>{product.summary}</p>
    <div class="product-specs">
      {product.specs.slice(0, 2).map((spec, index) => (
        <span key={index}>{spec}</span>
      ))}
    </div>
    <a class="link-arrow" href={`/products/${product.category}/${product.slug}`}>Meer informatie →</a>
  </div>
</article>

<style>
  :global(.product-card) {
    border-radius: 24px;
    border: 1px solid rgba(15, 31, 61, 0.12);
    background: #ffffff;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: 0 15px 40px rgba(15, 31, 61, 0.08);
    transition: all 0.3s ease;
    position: relative;
  }

  :global(.product-card:hover) {
    transform: translateY(-5px);
    box-shadow: 0 25px 50px rgba(15, 31, 61, 0.15);
    border-color: rgba(240, 140, 63, 0.3);
  }

  :global(.product-image-container) {
    position: relative;
    overflow: hidden;
    height: 220px;
  }

  :global(.product-card img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  :global(.product-card:hover img) {
    transform: scale(1.05);
  }

  :global(.product-card-overlay) {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  :global(.product-card:hover .product-card-overlay) {
    opacity: 1;
  }

  :global(.view-product-btn) {
    background: #ffffff;
    color: #0f1f3d;
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  :global(.view-product-btn:hover) {
    background: #f08c3f;
    color: #ffffff;
  }

  :global(.product-card .content) {
    padding: 1.6rem;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    flex-grow: 1;
  }

  :global(.product-category-badge) {
    background: rgba(240, 140, 63, 0.1);
    color: #f08c3f;
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    display: inline-block;
    align-self: flex-start;
  }

  :global(.product-card h3) {
    margin: 0;
    font-size: 1.35rem;
    color: #0f1f3d;
    line-height: 1.3;
  }

  :global(.product-card p) {
    margin: 0;
    color: rgba(15, 31, 61, 0.7);
    line-height: 1.6;
    font-size: 0.95rem;
    flex-grow: 1;
  }

  :global(.product-specs) {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    margin: 0.5rem 0;
  }

  :global(.product-specs span) {
    font-size: 0.85rem;
    color: rgba(15, 31, 61, 0.6);
    padding-left: 1.25rem;
    position: relative;
  }

  :global(.product-specs span::before) {
    content: "•";
    color: #f08c3f;
    position: absolute;
    left: 0.5rem;
    font-weight: bold;
  }

  :global(.link-arrow) {
    margin-top: auto;
    color: #f08c3f;
    font-weight: 600;
    text-decoration: none;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  :global(.link-arrow:hover) {
    gap: 0.5rem;
    color: #d97726;
  }
</style>
