---
import Header from '../components/Header.astro';
import { categories } from '../data/products';

const heroStats = [
  { title: 'Levertijd', value: '3-5 werkdagen' },
  { title: 'Kwaliteitscertificaat', value: 'ISO 9001, CE, REACH' },
  { title: 'Printercompatibiliteit', value: 'Epson, Canon, HP, Brother' },
  { title: 'Productlijn', value: '8+ productcategorieën' },
];

const featuredProducts = [
  {
    title: 'Pigment Printing Solution',
    image: 'https://www.winnerjet.com/wp-content/uploads/2025/09/Pigment-Printing-Solution.webp',
    description: 'Hogekwaliteit pigmentink voor professionele afdrukken met uitstekende kleurstabiliteit en waterweerstand.',
    category: 'pigment-inkten',
  },
  {
    title: 'DTG Printing Solution',
    image: 'https://www.winnerjet.com/wp-content/uploads/2025/09/DTG-Printing-Solution.webp',
    description: 'Premium DTG ink voor direct-na-garment print met zachte handfeel en hoge wasbestendigheid.',
    category: 'dtg-inkten',
  },
];

const certificates = [
  {
    image: 'https://res.cloudinary.com/dcfcz3rvj/image/upload/f_webp/ali2/kf/H3c9f466056cf401faa1f78d999af8f37o.jpg',
    title: 'ISO 9001 Certificaat',
    description: 'Kwaliteitsbeheersysteem gecertificeerd',
  },
  {
    image: 'https://www.winnerjet.com/wp-content/uploads/elementor/thumbs/CERTIFICATE-qo87aja2f7d1omhn1chrz6pco4cfyfbe0q6t6pto80.jpg',
    title: 'CE Certificaat',
    description: 'Conformiteit met Europese veiligheidsnormen',
  },
];
---

<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="NordicLine | Hoogwaardige inktfabrikant voor Epson, Canon en HP printers. ISO 9001 gecertificeerd met snelle levering in Nederland, België en Duitsland." />
    <title>NordicLine | Hoogwaardige Inktfabrikant voor Professionele Afdrukken</title>
    <link rel="icon" href="/img/fave.png" type="image/png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <div class="page">
      <Header />

      <main>
        <!-- 第一屏：英雄区域 -->
        <section id="hero" class="hero">
          <div class="hero-image">
            <img src="https://www.winnerjet.com/wp-content/uploads/2025/12/DTF-Printing-Materials-List-scaled.webp" alt="NordicLine Drukproducten" loading="eager" />
          </div>
          <div class="hero-content">
            <div class="hero-text">
              <div class="hero-logo">
                <img src="/img/logo.png" alt="NordicLine logo" width="120" height="51" loading="eager" />
              </div>
              <p class="hero-subtitle">One-stop Shopping</p>
              <h1>Drukoplossingsprovider - NordicLine</h1>
              <ul class="printing-services">
                <li><span class="checkmark">✓</span> Textielafdruk: DTF | DTG | Sublimatieafdruk</li>
                <li><span class="checkmark">✓</span> Buitenafdruk: Eco-solvent | UV-afdruk</li>
                <li><span class="checkmark">✓</span> Kantoorafdruk: Pigment | Dye-afdruk</li>
              </ul>
              <div class="hero-actions">
                <button class="btn primary" onclick="openInquiryForm()">Meer Informatie</button>
                <button class="btn secondary" onclick="openInquiryForm()">Gratis Offerte</button>
              </div>
            </div>
          </div>
        </section>

        <!-- 产品类别展示 -->
        <section id="product-categories" class="product-categories">
          <div class="container">
            <header>
              <p class="eyebrow">Onze Producten</p>
              <h2>Breed Assortiment aan Inktoplossingen</h2>
              <p>Ontdek onze uitgebreide productlijn voor verschillende printtechnologieën en toepassingen.</p>
            </header>
            <div class="categories-grid">
              {categories.map((category) => (
                <a href={`/products/${category.slug}`} class="category-card" key={category.slug}>
                  <div class="category-image">
                    <img src={category.heroImage} alt={category.title} loading="lazy" />
                  </div>
                  <div class="category-content">
                    <h3>{category.title}</h3>
                    <p>{category.description}</p>
                    <span class="btn-text">Bekijk Producten →</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </section>

        <!-- 特色产品方案 -->
        <section id="featured-solutions" class="featured-solutions">
          <div class="container">
            <header>
              <p class="eyebrow">Printoplossingen</p>
              <h2>Onze Uitgelichte Printoplossingen</h2>
              <p>Geavanceerde inktformules voor professionele resultaten in verschillende toepassingen.</p>
            </header>
            <div class="solutions-grid">
              {featuredProducts.map((product, index) => (
                <article class="solution-card" key={index}>
                  <div class="solution-image">
                    <img src={product.image} alt={product.title} loading="lazy" />
                  </div>
                  <div class="solution-content">
                    <h3>{product.title}</h3>
                    <p>{product.description}</p>
                    <button class="btn primary" onclick="openInquiryForm()">Bekijk Details</button>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </section>

        <!-- 证书展示 -->
        <section id="certificates" class="certificates">
          <div class="container">
            <header>
              <p class="eyebrow">Kwaliteitsgarantie</p>
              <h2>Onze Certificaten</h2>
              <p>We streven naar de hoogste kwaliteitsnormen en zijn gecertificeerd door internationale instanties.</p>
            </header>
            <div class="certificates-grid">
              {certificates.map((cert, index) => (
                <div class="certificate-card" key={index}>
                  <div class="certificate-image">
                    <img src={cert.image} alt={cert.title} loading="lazy" />
                  </div>
                  <div class="certificate-content">
                    <h3>{cert.title}</h3>
                    <p>{cert.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </section>

        <!-- 为什么选择我们 -->
        <section id="why-choose-us" class="why-choose-us">
          <div class="container">
            <header>
              <p class="eyebrow">Waarom NordicLine?</p>
              <h2>Uw Betrouwbare Partner voor Inktoplossingen</h2>
            </header>
            <div class="benefits-grid">
              <div class="benefit-item">
                <div class="benefit-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
                </div>
                <h3>Hoge Kwaliteit</h3>
                <p>ISO 9001 gecertificeerd met strikt kwaliteitscontrole op elke batch.</p>
              </div>
              <div class="benefit-item">
                <div class="benefit-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                </div>
                <h3>Snelle Levering</h3>
                <p>Levertijd van 3-5 werkdagen in Nederland, België en Duitsland.</p>
              </div>
              <div class="benefit-item">
                <div class="benefit-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                  </svg>
                </div>
                <h3>Brede Compatibiliteit</h3>
                <p>Compatibel met alle grote printermerken: Epson, Canon, HP, Brother.</p>
              </div>
              <div class="benefit-item">
                <div class="benefit-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                  </svg>
                </div>
                <h3>Nederlandse Service</h3>
                <p>Persoonlijke ondersteuning in uw eigen taal met kennis van de Europese markt.</p>
              </div>
            </div>
          </div>
        </section>

        <!-- 联系CTA -->
        <section id="contact-cta" class="contact-cta">
          <div class="container">
            <div class="cta-content">
              <h2>Ben U Klaar om te Bestellen?</h2>
              <p>Neem contact met ons op voor offertes, samples of technische vragen. Ons team reageert binnen 24 uur.</p>
              <div class="cta-actions">
                <button class="btn primary large" onclick="openInquiryForm()">Neem Contact Op</button>
                <button class="btn ghost large" onclick="openInquiryForm()">Bekijk Alle Producten</button>
              </div>
            </div>
          </div>
        </section>
      </main>

      <footer>
        <div class="container">
          <div class="footer-content">
            <div class="footer-brand">
              <div class="brand-logo">
                <img src="/img/logo.png" alt="NordicLine logo" width="160" height="68" loading="lazy" />
                <div class="brand-text">
                  <span>NordicLine</span>
                  <small>Ink &amp; Print</small>
                </div>
              </div>
              <p class="brand-description">Hoogwaardige inktfabrikant voor professionele afdrukken met ISO 9001 certificering.</p>
            </div>
            <div class="footer-links">
              <h4>Snelkoppelingen</h4>
              <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/products">Producten</a></li>
                <li><a href="/about">Over Ons</a></li>
                <li><a href="/contact">Contact</a></li>
              </ul>
            </div>
            <div class="footer-contact">
              <h4>Neem Contact Op</h4>
              <ul>
                <li><a href="mailto:ailujiaxiang@gmail">ailujiaxiang@gmail</a></li>
                <li><a href="https://wa.me/8618477468950" target="_blank" rel="noopener noreferrer">WhatsApp: +86 184 7746 8950</a></li>
                <li>Contactpersoon: Bob</li>
                <li>Industrieweg 10, 1000 AA Amsterdam</li>
              </ul>
            </div>
          </div>
          <div class="footer-bottom">
            <div class="footer-bottom-content">
              <p>© {new Date().getFullYear()} NordicLine. Alle rechten voorbehouden.</p>
              <div class="footer-bottom-links">
                <a href="#">Privacybeleid</a>
                <a href="#">Algemene Voorwaarden</a>
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>

    <style>
      /* 页面特定样式 */
      :root {
        --section-padding: 4rem 0;
      }

      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      /* Hero Section */
      .hero {
        width: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        min-height: 80vh;
      }

      .hero-image {
        width: 100%;
        margin: 0;
        padding: 0;
        position: relative;
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .hero-image img {
        width: 100%;
        height: 100%;
        display: block;
        margin: 0;
        padding: 0;
        object-fit: cover;
      }

      .hero-content {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        max-width: 50%;
        display: flex;
        align-items: center;
        padding: 3rem 2rem;
        background: linear-gradient(to right, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.8));
      }

      .hero-text {
        text-align: left;
        max-width: 100%;
      }

      .hero-logo {
        margin-bottom: 1rem;
      }

      .hero-logo img {
        display: block;
      }

      .hero-subtitle {
        color: #007bff;
        font-size: 1.2rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        letter-spacing: 0.05em;
      }

      .hero-text h1 {
        font-size: clamp(2rem, 5vw, 2.8rem);
        margin-bottom: 2rem;
        line-height: 1.2;
        color: #333;
        font-weight: 700;
      }

      .printing-services {
        list-style: none;
        padding: 0;
        margin: 0 0 2.5rem 0;
      }

      .printing-services li {
        margin-bottom: 1rem;
        color: #555;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 0.8rem;
      }

      .checkmark {
        color: #28a745;
        font-weight: bold;
        font-size: 1.2rem;
      }

      .hero-actions {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
      }

      .hero-actions .btn {
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: all 0.3s ease;
        text-decoration: none;
      }

      .btn.primary {
        background: #007bff;
        color: white;
        border: none;
      }

      .btn.primary:hover {
        background: #0056b3;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 123, 255, 0.3);
      }

      .btn.secondary {
        background: #6c757d;
        color: white;
        border: none;
      }

      .btn.secondary:hover {
        background: #545b62;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(108, 117, 125, 0.3);
      }

      /* Product Categories */
      .product-categories {
        padding: var(--section-padding);
        background: var(--card-bg);
      }

      .product-categories header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
      }

      .category-card {
        display: flex;
        flex-direction: column;
        background: white;
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-decoration: none;
        color: inherit;
      }

      .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(15, 31, 61, 0.15);
      }

      .category-image {
        height: 200px;
        overflow: hidden;
      }

      .category-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
      }

      .category-card:hover .category-image img {
        transform: scale(1.05);
      }

      .category-content {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      .category-content h3 {
        font-size: 1.4rem;
        margin-bottom: 0.8rem;
      }

      .category-content p {
        flex: 1;
        margin-bottom: 1rem;
        color: var(--text-secondary);
      }

      .btn-text {
        color: var(--accent);
        font-weight: 500;
        transition: color 0.3s ease;
      }

      .category-card:hover .btn-text {
        color: #e65c00;
      }

      /* Featured Solutions */
      .featured-solutions {
        padding: var(--section-padding);
        background: var(--bg-primary);
      }

      .featured-solutions header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .solutions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2.5rem;
      }

      .solution-card {
        background: white;
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease;
      }

      .solution-card:hover {
        transform: translateY(-5px);
      }

      .solution-image {
        height: 250px;
        overflow: hidden;
      }

      .solution-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .solution-content {
        padding: 2rem;
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      .solution-content h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }

      .solution-content p {
        flex: 1;
        margin-bottom: 1.5rem;
        color: var(--text-secondary);
      }

      /* Certificates */
      .certificates {
        padding: var(--section-padding);
        background: var(--card-bg);
      }

      .certificates header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .certificates-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        justify-items: center;
      }

      .certificate-card {
        background: white;
        border-radius: var(--border-radius-lg);
        padding: 1.5rem;
        box-shadow: var(--shadow-lg);
        text-align: center;
        max-width: 400px;
      }

      .certificate-image {
        margin-bottom: 1.5rem;
      }

      .certificate-image img {
        max-width: 100%;
        height: auto;
        border-radius: var(--border-radius-md);
      }

      .certificate-content h3 {
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
      }

      .certificate-content p {
        color: var(--text-secondary);
        margin: 0;
      }

      /* Why Choose Us */
      .why-choose-us {
        padding: var(--section-padding);
        background: var(--bg-primary);
      }

      .why-choose-us header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
      }

      .benefit-item {
        text-align: center;
        padding: 2rem;
        background: white;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-lg);
        transition: transform 0.3s ease;
      }

      .benefit-item:hover {
        transform: translateY(-5px);
      }

      .benefit-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--accent), #ff8a40);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        font-size: 1.8rem;
      }

      .benefit-item h3 {
        font-size: 1.3rem;
        margin-bottom: 0.8rem;
      }

      .benefit-item p {
        color: var(--text-secondary);
        margin: 0;
      }

      /* Contact CTA */
      .contact-cta {
        padding: var(--section-padding);
        background: linear-gradient(135deg, var(--text-primary), #1a3a6b);
        color: white;
      }

      .cta-content {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
      }

      .cta-content h2 {
        font-size: clamp(2rem, 4vw, 3rem);
        margin-bottom: 1.5rem;
        color: white;
      }

      .cta-content p {
        font-size: 1.2rem;
        margin-bottom: 2.5rem;
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.6;
      }

      .cta-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      .cta-actions .btn {
        padding: 0.9rem 2.5rem;
        font-size: 1.1rem;
      }

      .cta-actions .btn.primary {
        background: white;
        color: var(--text-primary);
      }

      .cta-actions .btn.primary:hover {
        background: rgba(255, 255, 255, 0.9);
      }

      .cta-actions .btn.ghost {
        border-color: white;
        color: white;
      }

      .cta-actions .btn.ghost:hover {
        background: rgba(255, 255, 255, 0.1);
      }

      /* Footer */
      footer {
        background: var(--text-primary);
        color: white;
        padding: 3rem 0 1.5rem;
      }

      .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
      }

      .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .brand-logo {
        display: flex;
        align-items: center;
        gap: 0.85rem;
      }

      .brand-logo img {
        filter: brightness(0) invert(1);
      }

      .brand-text {
        display: flex;
        flex-direction: column;
        line-height: 1;
      }

      .brand-text span {
        font-weight: 600;
        color: white;
        font-size: 1.2rem;
      }

      .brand-text small {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        color: rgba(255, 255, 255, 0.7);
      }

      .brand-description {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
      }

      .footer-links h4,
      .footer-contact h4 {
        margin-bottom: 1.5rem;
        color: white;
        font-size: 1.1rem;
      }

      .footer-links ul,
      .footer-contact ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
      }

      .footer-links a,
      .footer-contact a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .footer-links a:hover,
      .footer-contact a:hover {
        color: var(--accent);
      }

      .footer-contact li:last-child {
        color: rgba(255, 255, 255, 0.8);
      }

      .footer-bottom {
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
      }

      .footer-bottom-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.8rem;
        text-align: center;
